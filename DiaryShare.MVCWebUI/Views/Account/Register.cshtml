@model DiaryShare.MVCWebUI.Dtos.AccountForRegisterDto

@{
    ViewBag.Title = "Register";
}

<div class="col-md-5 col-md-offset-3">
    @if (ViewBag.RegisterMessage != null)
    {
        <div class="alert alert-info">
            @ViewBag.RegisterMessage
        </div>
    }
    <div class=" panel panel-info">
        <div class="panel-heading">
            <h3>Üye Olma Formu</h3>
        </div>
        <div class="panel-body">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post))
            {
                @Html.AntiForgeryToken();
                <div class="form-group">
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder = "İsim", required = "required" })
                    @Html.ValidationMessageFor(m => m.FirstName)
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder = "Soyisim", required = "required" })
                    @Html.ValidationMessageFor(m => m.LastName)
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email", required = "required" })
                    @Html.ValidationMessageFor(m => m.Email)
                </div>
                <div class="form-group">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Şifre", required = "required" })
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-success form-control" value="Üye Ol" />
                </div>
            }
        </div>
    </div>
</div>

@section scripts{
    @System.Web.Optimization.Scripts.Render("~/bundles/jqueryval")

}